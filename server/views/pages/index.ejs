              </thead>
              <tbody>
                <% problemRank.forEach((e,i) => { %>
                <div>
                  <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td>
                      <a
                        target="_blank"
                        rel="noopener noreferrer"
                        href="https://www.acmicpc.net/problem/<%= e.number%>"
                      >
                        <%= e.number %></a
                      >
                    </td>
                    <td><%= e.name %></td>
                    <td><%= e.cnt %></td>
                  </tr>
                </div>

                <% }) %>
              </tbody>
            </table>
            <!-- //table -->
          </div>
          <!-- // 문제순위 -->
